<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_margin="20dp"
    android:fitsSystemWindows="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="RtlSymmetry">
    <ImageView
        android:id="@+id/profile_photo_view"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@mipmap/ic_user"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/view_profile"
        app:layout_constraintTop_toTopOf="@id/username_view"/>

    <TextView
        android:id="@+id/username_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        tools:text="Stockbit"
        app:layout_constraintStart_toEndOf="@id/profile_photo_view"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpUsage"/>

    <TextView
        android:id="@+id/view_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/view_profile"
        android:textColor="@color/grey"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="@id/username_view"
        app:layout_constraintTop_toBottomOf="@id/username_view"
        tools:ignore="SpUsage" />
</androidx.constraintlayout.widget.ConstraintLayout>